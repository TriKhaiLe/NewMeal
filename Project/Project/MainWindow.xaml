<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        xmlns:uc="clr-namespace:Project.UserControlXAML"
        xmlns:viewmodels="clr-namespace:Project.ViewModel"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
      WindowStartupLocation="CenterScreen"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
        DataContext="{StaticResource MainVM}"
        
        Title="MainWindow" Height="700" Width="1100">
    <Window.Resources>
        <DataTemplate x:Name="FoodPageTemplate" DataType="{x:Type viewmodels:FoodViewModel}">
            <uc:FoodPage DataContext="{Binding}"></uc:FoodPage>
        </DataTemplate>
        <DataTemplate x:Name="HistoryPageTemplate" DataType="{x:Type viewmodels:HistoryViewModel}">
            <uc:HistoryPage DataContext="{Binding}"></uc:HistoryPage>
        </DataTemplate>
        <DataTemplate x:Name="CaloriePageTemplate" DataType="{x:Type viewmodels:CalorieBurnViewModel}">
            <uc:CalorieBurnPage DataContext="{Binding}"></uc:CalorieBurnPage>
        </DataTemplate>
        <DataTemplate x:Name="AccountPageTemplate" DataType="{x:Type viewmodels:AccountViewModel}">
            <uc:AccountPage DataContext="{Binding}"></uc:AccountPage>
        </DataTemplate>
    </Window.Resources>
    <Border CornerRadius="12,12,12,12">
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" ></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Background="#FFFFE86F" Width="150">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Vertical" Grid.Row="0 " >
                    <Ellipse  Width="100" Height="100" >
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="Assets/logo.png" Stretch="Fill"></ImageBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="Hello , User !" HorizontalAlignment="Center" FontSize="20"></TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="Black"
                                 IsChecked="True"
                                 Checked="CalorieBurn_Checked">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FireCircle" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Đốt cháy Calo" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="Black"
                                 IsChecked="True"
                                 Checked="Food_Checked">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FoodTakeoutBox" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Món ăn" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="Black"
                                 Checked="History_Checked">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="History" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Lịch sử món ăn" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="Black"
                                 Checked="Account_Checked">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountCircle" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Tài khoản" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
                <Button
                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                Grid.Row="2"
                materialDesign:ShadowAssist.ShadowAnimationDuration="0:0:0.5"
                Content="Đăng xuất">
                </Button>
            </Grid>
            <ContentControl Margin="10 0 0 0" Grid.Column="1" Content="{Binding}"></ContentControl>
        </Grid>
    </Border>
    
</Window>
