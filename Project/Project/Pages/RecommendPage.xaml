<Page x:Class="Project.Pages.RecommendPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.Pages"
      Title="RecommendPage"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             d:DesignHeight="450" d:DesignWidth="801.915" Foreground="White" Loaded="recommend_page_Loaded">
    <Page.Resources>
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border x:Name="rectangle"
                                SnapsToDevicePixels="True"
                                Background="#FFFFC200"
                                CornerRadius="3"
                                Height="{TemplateBinding Height}"
                                Width="{TemplateBinding Width}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Width" Value="25"/>
            <Setter Property="Margin" Value="-14 0 0 0" />
            <Setter Property="MinWidth" Value="{Binding Width, RelativeSource={RelativeSource Self}}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="Bg" SnapsToDevicePixels="true" Background="Transparent">
                            <Border Padding="0 4">
                                <Track x:Name="PART_Track"
                                               IsDirectionReversed="true"
                                               Width="12"
                                               HorizontalAlignment="Center">
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource ScrollBarThumb}" />
                                    </Track.Thumb>
                                </Track>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <DockPanel Grid.Row="0">
                <TextBlock Grid.Row="0" 
                       Text="Đề Xuất Cho Bạn"
                       Foreground="Black"
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
                <StackPanel>
                    <TextBlock Text="Tổng Calo trong bữa ăn:"
                           Foreground="Black" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           DockPanel.Dock="Right" 
                           VerticalAlignment="Top" 
                           HorizontalAlignment="Center"
                           />
                    <TextBlock Foreground="Black" 
                               FontSize="18"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </StackPanel>

            </DockPanel>
            <DockPanel Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="280"/>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.Column="0">
                        <materialDesign:Card VerticalAlignment="Stretch">
                            <materialDesign:Card.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform AngleX="0"/>
                                    <RotateTransform/>
                                    <TranslateTransform X="0"/>
                                </TransformGroup>
                            </materialDesign:Card.RenderTransform>
                            <TabControl x:Name="tab_control"
                                materialDesign:ColorZoneAssist.Mode="SecondaryMid"
                                Style="{StaticResource MaterialDesignFilledTabControl}" Width="280">
                                <TabItem x:Name="breakfast" Width="75"
                                         Padding="0, 0, 0, 0">
                                    <TabItem.Header>
                                        <TextBlock Text="Bữa Sáng"
                                                   Foreground="Black"
                                                   FontWeight="Bold"
                                                   FontSize="14"/>
                                    </TabItem.Header>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ListView  Name="lvBreakfastRecommendation" SelectionChanged="lvBreakfastRecommendation_SelectionChanged" IsSynchronizedWithCurrentItem="True">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <materialDesign:Card
                                                        materialDesign:ElevationAssist.Elevation="Dp2">
                                                        <Border CornerRadius="12" Background="White"  >
                                                            <Grid Width="270">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition></ColumnDefinition>
                                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                                </Grid.ColumnDefinitions>
                                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                                    <Rectangle Margin="0 0 10 10" Width="50" Height="50" >
                                                                        <Rectangle.Fill>
                                                                            <ImageBrush ImageSource="{Binding Imgsrc}"></ImageBrush>
                                                                        </Rectangle.Fill>
                                                                    </Rectangle>
                                                                    <TextBlock Text="Name: " />
                                                                    <TextBlock Text="{Binding FoodName}" FontWeight="Bold" />
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </materialDesign:Card>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </ScrollViewer>
                                </TabItem>
                                <TabItem x:Name="lunch" Width="75"
                                         Padding="0, 0, 0, 0">
                                    <TabItem.Header>
                                        <TextBlock Text="Bữa Trưa"
                                                   Foreground="Black"
                                                   FontWeight="Bold"
                                                   FontSize="14"/>
                                    </TabItem.Header>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ListView  Name="lvLunchRecommendation" SelectionChanged="lvLunchRecommendation_SelectionChanged" IsSynchronizedWithCurrentItem="True">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <materialDesign:Card
                                                        materialDesign:ElevationAssist.Elevation="Dp2">
                                                        <Border CornerRadius="12" Background="White"  >
                                                            <Grid Width="270">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition></ColumnDefinition>
                                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                                </Grid.ColumnDefinitions>
                                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                                    <Rectangle Margin="0 0 10 10" Width="50" Height="50" >
                                                                        <Rectangle.Fill>
                                                                            <ImageBrush ImageSource="{Binding Imgsrc}"></ImageBrush>
                                                                        </Rectangle.Fill>
                                                                    </Rectangle>
                                                                    <TextBlock Text="Name: " />
                                                                    <TextBlock Text="{Binding FoodName}" FontWeight="Bold" />
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </materialDesign:Card>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </ScrollViewer>
                                </TabItem>
                                <TabItem x:Name="dinner" Width="75"
                                         Padding="0, 0, 0, 0">
                                    <TabItem.Header>
                                        <TextBlock Text="Bữa Tối"
                                                   Foreground="Black"
                                                   FontWeight="Bold"
                                                   FontSize="14"/>
                                    </TabItem.Header>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ListView  Name="lvDinnerRecommendation" SelectionChanged="lvDinnerRecommendation_SelectionChanged" IsSynchronizedWithCurrentItem="True">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <materialDesign:Card
                                                        materialDesign:ElevationAssist.Elevation="Dp2">
                                                        <Border CornerRadius="12" Background="White"  >
                                                            <Grid Width="270">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition></ColumnDefinition>
                                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                                </Grid.ColumnDefinitions>
                                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                                    <Rectangle Margin="0 0 10 10" Width="50" Height="50" >
                                                                        <Rectangle.Fill>
                                                                            <ImageBrush ImageSource="{Binding Imgsrc}"></ImageBrush>
                                                                        </Rectangle.Fill>
                                                                    </Rectangle>
                                                                    <TextBlock Text="Name: " />
                                                                    <TextBlock Text="{Binding FoodName}" FontWeight="Bold" />
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </materialDesign:Card>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </ScrollViewer>
                                </TabItem>
                            </TabControl>
                        </materialDesign:Card>
                    </DockPanel>
                    <DockPanel Grid.Column="1">
                        <materialDesign:Card VerticalAlignment="Stretch"
                                             HorizontalAlignment="Stretch">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="250" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <materialDesign:Card
                                     materialDesign:ElevationAssist.Elevation="Dp2">
                                    <Image x:Name="food_image" Height="auto"
                                       Stretch="Uniform"
                                       />
                                </materialDesign:Card>
                                <ToggleButton 
                                    x:Name="favorite_button"
                                    Grid.Row="0"
                                    Margin="0,0,16,-20"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    materialDesign:ToggleButtonAssist.OnContent="{materialDesign:PackIcon Kind=Heart}"
                                    Content="{materialDesign:PackIcon Kind=CardsHeartOutline}"
                                    Style="{StaticResource MaterialDesignActionToggleButton}"
                                    ToolTip="MaterialDesignActionLightToggleButton" Click="favorite_button_Click"/>
                                <Grid Grid.Row="1"
                                            Margin="8,24,8,4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock x:Name="food_review" VerticalAlignment="Center"
                                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                                               TextWrapping="Wrap"
                                               Foreground="Black"/>
                                    <GroupBox 
                                        Grid.Row="1"
                                        materialDesign:ColorZoneAssist.Mode="SecondaryMid"
                                        Header="Calo"
                                        Style="{StaticResource MaterialDesignGroupBox}">
                                        <TextBlock
                                               x:Name="tb_calo"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                                               TextWrapping="Wrap"
                                               Foreground="Black"
                                               Text ="123"/>
                                    </GroupBox>
                                    <GroupBox
                                        Grid.Row="2"
                                        Margin="0"
                                        materialDesign:ColorZoneAssist.Mode="SecondaryMid"
                                        Header="Lần cuối ăn: "
                                        Style="{StaticResource MaterialDesignGroupBox}">
                                        <TextBlock
                                               x:Name="tb_last_eat"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                                               TextWrapping="Wrap"
                                               Foreground="Black"/>
                                    </GroupBox>
                                </Grid>
                                <Separator Grid.Row="2"
                                           Margin="8,0,8,0"
                                           Style="{StaticResource MaterialDesignDarkSeparator}" />
                                <DockPanel Grid.Row="5"
                                           HorizontalAlignment="Right">
                                    <Button x:Name="btn_them" Margin="8,4,8,8"
                                            HorizontalAlignment="Left"
                                            Content="THÊM"
                                            Style="{StaticResource MaterialDesignFlatButton}" Click="btn_them_Click" />
                                </DockPanel>
                            </Grid>
                        </materialDesign:Card>
                    </DockPanel>
                </Grid>
            </DockPanel>
        </Grid>

        <Grid Margin="15 0 0 0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Margin" Value="8"></Setter>
                    </Style>
                </StackPanel.Resources>
                <TextBlock x:Name="HelloTime_tb" Foreground="Black" FontSize="20" FontWeight="Bold"></TextBlock>
                <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now},
           StringFormat='{}{0:ddd , dd MMM , yyyy }'}" FontWeight="Bold" FontSize="16" Language="vi">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF438989" Offset="0"/>
                            <GradientStop Color="#FF76F311" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Text="Món ăn đã chọn" Foreground="Black" FontSize="20" HorizontalAlignment="Center" Margin="10"></TextBlock>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
                    <ListBox x:Name="SelectedFood_lv" BorderThickness="2" BorderBrush="#FFFFC200" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card
                                materialDesign:ElevationAssist.Elevation="Dp2">
                                    <Border CornerRadius="12" Background="White"  >
                                        <Grid Width="{Binding ElementName=Grid_lb , Path=ActualWidth}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                <Rectangle Margin="0 0 10 0" Width="50" Height="50">
                                                    <Rectangle.Fill>
                                                        <ImageBrush ImageSource="{Binding Imgsrc}"></ImageBrush>
                                                    </Rectangle.Fill>
                                                </Rectangle>
                                                <TextBlock VerticalAlignment="Center" Width="140" Text="{Binding FoodName}" TextWrapping="Wrap" FontWeight="Bold" />
                                            </StackPanel>
                                            <Button Grid.Column="1"
                                                    Margin="-10 0 0 0"
                                                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                                    Height="30"
                                                    Padding="-10"
                                                    Width="30"
                                                    materialDesign:ButtonAssist.CornerRadius="50"
                                                    Click="DelSelected_Click"
                                                    >
                                                <materialDesign:PackIcon Kind="Close" HorizontalAlignment="Center" Width="15" Height="15"/>
                                            </Button>

                                        </Grid>
                                    </Border>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
                <Button
                        Grid.Row="2"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Margin="5"
                        Height="25"
                        Width="100"
                        materialDesign:ButtonAssist.CornerRadius="12"
                        >
                    <TextBlock Text="Chấp nhận" />
                </Button>
            </Grid>

            <StackPanel Grid.Row="2" Margin="10 10 10 20">
                <TextBlock Text="Lượng Calo hằng ngày" Foreground="Black" HorizontalAlignment="Center" FontSize="16"></TextBlock>
                <lvc:Gauge Grid.Row="0" Grid.Column="0" Margin="5"
                           Uses360Mode="True"
                           x:Name="Gauge_Kcal"
                           From="0" Value="0"
                           Foreground ="Black"
                           Height="100" GaugeActiveFill="#FFFFC200">

                </lvc:Gauge>
                <TextBlock Visibility="Hidden" x:Name="kcal_txt" Text="Lượng kcal vượt quá mức quy định !" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Red"></TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
