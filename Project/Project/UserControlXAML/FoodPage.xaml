<UserControl x:Class="Project.UserControlXAML.FoodPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.UserControlXAML"
             mc:Ignorable="d" 
               xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
      Name="foodpage"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
            
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border x:Name="rectangle"
                                SnapsToDevicePixels="True"
                                Background="#FFFFC200"
                                CornerRadius="3"
                                Height="{TemplateBinding Height}"
                                Width="{TemplateBinding Width}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Width" Value="25"/>
            <Setter Property="Margin" Value="-14 0 0 0" />
            <Setter Property="MinWidth" Value="{Binding Width, RelativeSource={RelativeSource Self}}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="Bg" SnapsToDevicePixels="true" Background="Transparent">
                            <Border Padding="0 4">
                                <Track x:Name="PART_Track"
                                               IsDirectionReversed="true"
                                               Width="12"
                                               HorizontalAlignment="Center">
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource ScrollBarThumb}" />
                                    </Track.Thumb>
                                </Track>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" Margin="0 0 0 20">
                <TextBlock
                    Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                    Text="Hôm nay ăn gì ?" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <ToggleButton
                        Margin="0 0 10 0"
                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                        ToolTip="MaterialDesignSwitchToggleButton"
                        IsChecked="True"/>
                    <Rectangle Width="30" Height="30">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="/Assets/meat.png"></ImageBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <ToggleButton
                        Margin="20 0 10 0"
                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                        ToolTip="MaterialDesignSwitchToggleButton"
                        IsChecked="True"/>
                    <Rectangle Width="30" Height="30">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="/Assets/vegetable.png"></ImageBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                </StackPanel>
            </DockPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="RadioButton">
                        <Setter Property="Height" Value="140"/>
                        <Setter Property="Width" Value="80"/>
                        <Setter Property="Margin" Value="-5,0,0,5"/>
                        <Setter Property="Background" Value="GhostWhite"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="RadioButton" >
                                    <Grid>
                                        <Rectangle RadiusX="20" RadiusY="20" Height="140" Fill="{TemplateBinding Background}">
                                            <Rectangle.Stroke>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="Black"/>
                                                </LinearGradientBrush>
                                            </Rectangle.Stroke>
                                        </Rectangle>
                                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <!--Button Style on hover-->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFFFC200"/>
                                <Setter Property="TextBlock.FontWeight" Value="Bold"></Setter>
                            </Trigger>
                            <!--Activated button style-->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FFFFC200"/>
                                <Setter Property="TextBlock.FontWeight" Value="Bold"></Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>
                <RadioButton Grid.Column="0">
                    <StackPanel Width="80" HorizontalAlignment="Center">
                        <Ellipse Width="50" Height="50" StrokeThickness="0.5" Stroke="Black">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Assets/rice.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Margin="0 10 0 0" Text="Cơm" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Grid.Column="1">
                    <StackPanel Width="80" HorizontalAlignment="Center">
                        <Ellipse Width="50" Height="50" StrokeThickness="0.5" Stroke="Black">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Assets/noodle.png" Stretch="Fill" TileMode="None"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Margin="0 10 0 0" Text="Món nước" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Grid.Column="2">
                    <StackPanel Width="80" HorizontalAlignment="Center">
                        <Ellipse Width="50" Height="50" StrokeThickness="0.5" Stroke="Black">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Assets/seafood.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Margin="0 10 0 0" Text="Đồ biển" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Grid.Column="3">
                    <StackPanel Width="80" HorizontalAlignment="Center">
                        <Ellipse Width="50" Height="50" StrokeThickness="0.5" Stroke="Black">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Assets/soup.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Margin="0 10 0 0" Text="Canh" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Grid.Column="4">
                    <StackPanel Width="80" HorizontalAlignment="Center">
                        <Ellipse Width="50" Height="50" StrokeThickness="0.5" Stroke="Black">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Assets/drink.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Margin="0 10 0 0" Text="Thức uống" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Grid.Column="5">
                    <StackPanel Width="80" HorizontalAlignment="Center">
                        <Ellipse Width="50" Height="50" StrokeThickness="0.5" Stroke="Black">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Assets/cake.jpg" Stretch="Fill" Viewport="0,0,1,1"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Margin="0 10 0 0" Text="Đồ ăn vặt" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.Resources>
                    
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <DockPanel  Margin="0 10 0 20" Grid.Row="0">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Lọc theo : " Margin="0 0 5 0" VerticalAlignment="Center"></Label>
                        <TextBox
                            Margin="5"
                            VerticalAlignment="Center"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            MaxWidth="400"
                            Width="200"
                            />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">
                        <Label Content="Sắp xếp theo :" VerticalAlignment="Center"></Label>
                        <ComboBox
                            Margin="5"
                        BorderBrush="White"
                        Width="100"
                        Height="30">
                            <ComboBoxItem
                            Content="Calorie" />
                            <ComboBoxItem
                            Content="Tên" />
                        </ComboBox>
                    </StackPanel>

                </DockPanel>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
                    <ListView   Name="lvDataBinding" SelectionChanged="lvDataBinding_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card
                                materialDesign:ElevationAssist.Elevation="Dp2">
                                    <Border CornerRadius="12" Background="White"  >
                                        <DockPanel Width="400">
                                            <Rectangle Margin="0 0 10 10" Width="50" Height="50">
                                                <Rectangle.Fill>
                                                    <ImageBrush ImageSource="/Assets/logo.png"></ImageBrush>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock Text="Name: " />
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                                        </DockPanel>
                                    </Border>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>
        </Grid>
        <Grid Margin="15 0 0 0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Margin" Value="8"></Setter>
                    </Style>
                </StackPanel.Resources>
                <TextBlock x:Name="HelloTime_tb" FontSize="20" FontWeight="Bold"></TextBlock>
                <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now},
           StringFormat='{}{0:ddd , dd MMM , yyyy }'}" FontWeight="Bold" FontSize="16" Language="vi" Foreground="AntiqueWhite"/>
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Text="Món ăn đã chọn" FontSize="20" HorizontalAlignment="Center" Margin="10"></TextBlock>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
                    <ListBox x:Name="SelectedFood_lv" BorderBrush="#FFFFC200" BorderThickness="2">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card
                                materialDesign:ElevationAssist.Elevation="Dp2">
                                    <Border CornerRadius="12" Background="White"  >
                                        <DockPanel Width="400">
                                            <Rectangle Margin="0 0 10 10" Width="50" Height="50">
                                                <Rectangle.Fill>
                                                    <ImageBrush ImageSource="/Assets/logo.png"></ImageBrush>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock Text="Name: " />
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                                        </DockPanel>
                                    </Border>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>
            
            <StackPanel Grid.Row="2" Margin="10 10 0 20">
                <TextBlock Text="Lượng Calo hằng ngày" HorizontalAlignment="Center"></TextBlock>
                <ProgressBar
                    Value="20"
                    Height="80"
                    Width="80"
                    Foreground="#FFFFC200"
                    x:Name="DeterminateCircularProgress"
                    Style="{StaticResource MaterialDesignCircularProgressBar}">
                </ProgressBar>
                <TextBlock Text="{Binding ElementName=DeterminateCircularProgress , Path=Value , StringFormat={}{0}% Calo}" HorizontalAlignment="Center"></TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
